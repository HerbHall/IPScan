<Window x:Class="IPScan.GUI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPScan"
        Width="620" Height="300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Topmost="True">

    <Border CornerRadius="8" Background="{DynamicResource SplashBackgroundBrush}" BorderBrush="{DynamicResource SplashBorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Network Topology Diagram -->
            <Canvas Grid.Row="0" Grid.Column="0" Margin="20">
                <!-- Central Router/Hub -->
                <Ellipse Canvas.Left="115" Canvas.Top="70" Width="50" Height="50"
                         Fill="{DynamicResource AccentBrush}" Stroke="{DynamicResource AccentBrush}" StrokeThickness="2"/>
                <TextBlock Canvas.Left="125" Canvas.Top="82" Text="&#xE968;" FontFamily="Segoe MDL2 Assets"
                           FontSize="24" Foreground="White"/>

                <!-- Connection Lines -->
                <Line X1="140" Y1="70" X2="60" Y2="30" Stroke="{DynamicResource ConnectionLineBrush}" StrokeThickness="2" StrokeDashArray="2,2"/>
                <Line X1="140" Y1="70" X2="220" Y2="30" Stroke="{DynamicResource ConnectionLineBrush}" StrokeThickness="2" StrokeDashArray="2,2"/>
                <Line X1="140" Y1="120" X2="60" Y2="160" Stroke="{DynamicResource ConnectionLineBrush}" StrokeThickness="2" StrokeDashArray="2,2"/>
                <Line X1="140" Y1="120" X2="140" Y2="170" Stroke="{DynamicResource ConnectionLineBrush}" StrokeThickness="2" StrokeDashArray="2,2"/>
                <Line X1="140" Y1="120" X2="220" Y2="160" Stroke="{DynamicResource ConnectionLineBrush}" StrokeThickness="2" StrokeDashArray="2,2"/>

                <!-- Device Nodes - Top Row -->
                <Ellipse Canvas.Left="35" Canvas.Top="5" Width="35" Height="35"
                         Fill="{DynamicResource DeviceNodeBrush}" Stroke="{DynamicResource DeviceBorderBrush}" StrokeThickness="1.5"/>
                <TextBlock Canvas.Left="43" Canvas.Top="12" Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets"
                           FontSize="18" Foreground="{DynamicResource DeviceIconBrush}"/>

                <Ellipse Canvas.Left="195" Canvas.Top="5" Width="35" Height="35"
                         Fill="{DynamicResource DeviceNodeBrush}" Stroke="{DynamicResource DeviceBorderBrush}" StrokeThickness="1.5"/>
                <TextBlock Canvas.Left="203" Canvas.Top="12" Text="&#xE977;" FontFamily="Segoe MDL2 Assets"
                           FontSize="18" Foreground="{DynamicResource DeviceIconBrush}"/>

                <!-- Device Nodes - Bottom Row -->
                <Ellipse Canvas.Left="35" Canvas.Top="145" Width="35" Height="35"
                         Fill="{DynamicResource DeviceNodeBrush}" Stroke="{DynamicResource DeviceBorderBrush}" StrokeThickness="1.5"/>
                <TextBlock Canvas.Left="43" Canvas.Top="152" Text="&#xE7F8;" FontFamily="Segoe MDL2 Assets"
                           FontSize="18" Foreground="{DynamicResource DeviceIconBrush}"/>

                <Ellipse Canvas.Left="115" Canvas.Top="160" Width="35" Height="35"
                         Fill="{DynamicResource DeviceNodeBrush}" Stroke="{DynamicResource DeviceBorderBrush}" StrokeThickness="1.5"/>
                <TextBlock Canvas.Left="123" Canvas.Top="167" Text="&#xE703;" FontFamily="Segoe MDL2 Assets"
                           FontSize="18" Foreground="{DynamicResource DeviceIconBrush}"/>

                <Ellipse Canvas.Left="195" Canvas.Top="145" Width="35" Height="35"
                         Fill="{DynamicResource DeviceNodeBrush}" Stroke="{DynamicResource DeviceBorderBrush}" StrokeThickness="1.5"/>
                <TextBlock Canvas.Left="203" Canvas.Top="152" Text="&#xE8EA;" FontFamily="Segoe MDL2 Assets"
                           FontSize="18" Foreground="{DynamicResource DeviceIconBrush}"/>
            </Canvas>

            <!-- Application Info -->
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,20,30,20">
                <TextBlock Text="IPScan" FontSize="42" FontWeight="Bold"
                           Foreground="{DynamicResource TitleBrush}" Margin="0,0,0,5"/>
                <TextBlock Text="Network Device Discovery" FontSize="14"
                           Foreground="{DynamicResource SubtitleBrush}" Margin="0,0,0,20"/>

                <TextBlock x:Name="VersionText" Text="Version 0.0.0" FontSize="12"
                           Foreground="{DynamicResource InfoTextBrush}" Margin="0,0,0,3"/>
                <TextBlock FontSize="11" Foreground="{DynamicResource InfoTextBrush}" Margin="0,0,0,3">
                    <Hyperlink x:Name="RepoLink" NavigateUri="https://github.com/HerbHall/IPScan"
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{DynamicResource LinkBrush}">
                        github.com/HerbHall/IPScan
                    </Hyperlink>
                </TextBlock>

                <TextBlock Text="Herb Hall" FontSize="11"
                           Foreground="{DynamicResource InfoTextBrush}" Margin="0,15,0,2"/>
                <TextBlock FontSize="11" Foreground="{DynamicResource InfoTextBrush}" Margin="0,0,0,2">
                    <Hyperlink NavigateUri="mailto:herbhall21@gmail.com"
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{DynamicResource LinkBrush}">
                        herbhall21@gmail.com
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text="MIT License" FontSize="11"
                           Foreground="{DynamicResource InfoTextBrush}"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="{DynamicResource FooterBackgroundBrush}"
                    CornerRadius="0,0,8,8" Padding="20,10">
                <Grid>
                    <TextBlock Text="Click anywhere to continue..."
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               FontSize="11" Foreground="{DynamicResource FooterTextBrush}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock x:Name="CountdownText" Text="Auto-continuing in 5s"
                                   FontSize="11" Foreground="{DynamicResource FooterTextBrush}" Margin="0,0,10,0"/>
                        <ProgressBar x:Name="TimeoutProgress" Width="100" Height="4"
                                     Maximum="100" Value="100"
                                     Foreground="{DynamicResource AccentBrush}"
                                     Background="{DynamicResource ProgressBackgroundBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>

    <Window.Resources>
        <!-- Light Theme (Default) -->
        <SolidColorBrush x:Key="SplashBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SplashBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="ConnectionLineBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="DeviceNodeBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="DeviceBorderBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="DeviceIconBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#666666"/>
        <SolidColorBrush x:Key="InfoTextBrush" Color="#888888"/>
        <SolidColorBrush x:Key="LinkBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="FooterTextBrush" Color="#666666"/>
        <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#E0E0E0"/>
    </Window.Resources>
</Window>
