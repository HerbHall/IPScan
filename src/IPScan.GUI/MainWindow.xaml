<Window x:Class="IPScan.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPScan.GUI"
        mc:Ignorable="d"
        Title="IPScan - Network Device Discovery"
        MinHeight="500" MinWidth="800"
        Background="{DynamicResource WindowBackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Light Theme (Default) -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
        <SolidColorBrush x:Key="DisabledTextBrush" Color="#999999"/>
        <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MenuBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="StatusBarTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TreeViewSelectedBrush" Color="#CCE4F7"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="OnlineStatusBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="OfflineStatusBrush" Color="#D13438"/>
        <SolidColorBrush x:Key="LinkBrush" Color="#0078D4"/>

        <!-- Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Menu -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Warning Banner -->
            <RowDefinition Height="*"/>     <!-- Content -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}"
              BorderBrush="{DynamicResource MenuBorderBrush}" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_Scan Network" Click="ScanNetwork_Click" InputGestureText="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Rescan All Devices" Click="RescanAll_Click" InputGestureText="Ctrl+R">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xport Devices..." Click="ExportDevices_Click" InputGestureText="Ctrl+E">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xEDE1;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Import Devices..." Click="ImportDevices_Click" InputGestureText="Ctrl+I">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Settings..." Click="Settings_Click" InputGestureText="Ctrl+,">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Offline Devices" x:Name="ShowOfflineMenuItem"
                          IsCheckable="True" IsChecked="True" Click="ToggleOffline_Click"/>
                <Separator/>
                <MenuItem Header="_Refresh" Click="Refresh_Click" InputGestureText="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="Help_Click" InputGestureText="F1">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_View on GitHub" Click="GitHub_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_About IPScan" Click="About_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Toolbar -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource PrimaryButtonStyle}" Click="ScanNetwork_Click"
                            ToolTip="Scan for new devices (F5)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Scan" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="RescanAll_Click"
                            ToolTip="Rescan all known devices (Ctrl+R)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Rescan All" Margin="8,0,0,0" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Width="1" Fill="{DynamicResource SeparatorBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="Settings_Click"
                            ToolTip="Application settings (Ctrl+,)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Settings" Margin="8,0,0,0" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Column="2" Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1"
                        CornerRadius="4" Padding="8,4" MinWidth="200">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="14" VerticalAlignment="Center"
                                   Foreground="{DynamicResource DisabledTextBrush}" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox" BorderThickness="0"
                                 Background="Transparent" VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextBrush}"
                                 Text="" TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Search devices..." Foreground="#999999" Margin="0,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Warning Banner (Storage Unavailable) -->
        <Border x:Name="StorageWarningBanner" Grid.Row="2" Visibility="Collapsed"
                Background="#FFF4CE" BorderBrush="#E7C200" BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Warning Icon -->
                <TextBlock Grid.Column="0" Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                           FontSize="16" VerticalAlignment="Center"
                           Foreground="#8B6F00" Margin="0,0,12,0"/>

                <!-- Warning Message -->
                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                           Foreground="#8B6F00" TextWrapping="Wrap">
                    <Run FontWeight="SemiBold">Storage Unavailable:</Run>
                    <Run Text=" Running in memory-only mode. Changes will not be saved."/>
                </TextBlock>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ChooseStorageLocationButton" Content="Choose Location"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Click="ChooseStorageLocation_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="DismissWarningButton" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource ToolbarButtonStyle}"
                            ToolTip="Dismiss (continue in memory-only mode)"
                            Click="DismissStorageWarning_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Device List Panel -->
            <Border Grid.Column="0" Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Border Grid.Row="0" BorderBrush="{DynamicResource PanelBorderBrush}"
                            BorderThickness="0,0,0,1" Padding="12,10">
                        <Grid>
                            <TextBlock Text="Devices" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource TitleBrush}"/>
                            <TextBlock x:Name="DeviceCountText" Text="0 devices"
                                       HorizontalAlignment="Right" FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Device TreeView -->
                    <TreeView Grid.Row="1" x:Name="DeviceTreeView" BorderThickness="0"
                              Background="Transparent" Padding="4"
                              SelectedItemChanged="DeviceTreeView_SelectedItemChanged">
                        <!-- Placeholder items - will be populated from data -->
                        <TreeViewItem Header="Routers" IsExpanded="True">
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="{DynamicResource OnlineStatusBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Main Router" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text=" (192.168.1.1)" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Servers" IsExpanded="True">
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="{DynamicResource OnlineStatusBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="NAS" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text=" (192.168.1.10)" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Other Devices" IsExpanded="True">
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="{DynamicResource OfflineStatusBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Printer" Foreground="{DynamicResource DisabledTextBrush}"/>
                                        <TextBlock Text=" (192.168.1.50)" Foreground="{DynamicResource DisabledTextBrush}"/>
                                    </StackPanel>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Device Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Border Grid.Row="0" BorderBrush="{DynamicResource PanelBorderBrush}"
                            BorderThickness="0,0,0,1" Padding="12,10">
                        <TextBlock Text="Device Details" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{DynamicResource TitleBrush}"/>
                    </Border>

                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel x:Name="DeviceDetailsPanel">
                            <!-- No Selection State -->
                            <StackPanel x:Name="NoSelectionPanel" HorizontalAlignment="Center"
                                        VerticalAlignment="Center" Margin="0,60,0,0">
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="48" HorizontalAlignment="Center"
                                           Foreground="{DynamicResource DisabledTextBrush}"/>
                                <TextBlock Text="Select a device to view details"
                                           FontSize="14" Margin="0,16,0,0"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Device Details (hidden by default, shown when device selected) -->
                            <StackPanel x:Name="SelectedDevicePanel" Visibility="Collapsed">
                                <!-- Device Name & Status -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Name="DeviceNameText" Text="Device Name"
                                                   FontSize="24" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TitleBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Ellipse x:Name="DeviceStatusIndicator" Width="10" Height="10"
                                                     Fill="{DynamicResource OnlineStatusBrush}"/>
                                            <TextBlock x:Name="DeviceStatusText" Text="Online" Margin="8,0,0,0"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource ToolbarButtonStyle}"
                                            Click="EditDevice_Click" ToolTip="Edit device">
                                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </Button>
                                </Grid>

                                <!-- Device Info Grid -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="IP Address"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DeviceIPText" Text="192.168.1.1"
                                               Foreground="{DynamicResource TextBrush}" Margin="0,4"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="MAC Address"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DeviceMACText" Text="AA:BB:CC:DD:EE:FF"
                                               Foreground="{DynamicResource TextBrush}" Margin="0,4"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Device Type"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DeviceTypeText" Text="Router"
                                               Foreground="{DynamicResource TextBrush}" Margin="0,4"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="First Seen"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DeviceFirstSeenText" Text="Jan 20, 2026"
                                               Foreground="{DynamicResource TextBrush}" Margin="0,4"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Last Seen"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DeviceLastSeenText" Text="Jan 25, 2026 10:30 AM"
                                               Foreground="{DynamicResource TextBrush}" Margin="0,4"/>
                                </Grid>

                                <!-- Open Ports Section -->
                                <TextBlock Text="Open Ports" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{DynamicResource TitleBrush}" Margin="0,0,0,12"/>
                                <Border Background="{DynamicResource WindowBackgroundBrush}"
                                        BorderBrush="{DynamicResource PanelBorderBrush}"
                                        BorderThickness="1" CornerRadius="4" Padding="0" Margin="0,0,0,20">
                                    <ItemsControl x:Name="PortsList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource PanelBorderBrush}"
                                                        BorderThickness="0,0,0,1" Padding="12,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Port}" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextBrush}"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Service}"
                                                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                        <Button Grid.Column="2" Content="Open"
                                                                Style="{StaticResource ToolbarButtonStyle}"
                                                                Click="OpenPort_Click" Tag="{Binding}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <!-- Placeholder ports -->
                                        <Border BorderBrush="{DynamicResource PanelBorderBrush}"
                                                BorderThickness="0,0,0,1" Padding="12,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="80" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Column="1" Text="HTTP - Web Interface"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                <TextBlock Grid.Column="2" Text="Open" Cursor="Hand"
                                                           Foreground="{DynamicResource LinkBrush}"/>
                                            </Grid>
                                        </Border>
                                        <Border BorderBrush="{DynamicResource PanelBorderBrush}"
                                                BorderThickness="0,0,0,1" Padding="12,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="443" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Column="1" Text="HTTPS - Web Interface (Secure)"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                <TextBlock Grid.Column="2" Text="Open" Cursor="Hand"
                                                           Foreground="{DynamicResource LinkBrush}"/>
                                            </Grid>
                                        </Border>
                                        <Border Padding="12,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="22" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Column="1" Text="SSH"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                <TextBlock Grid.Column="2" Text="Connect" Cursor="Hand"
                                                           Foreground="{DynamicResource LinkBrush}"/>
                                            </Grid>
                                        </Border>
                                    </ItemsControl>
                                </Border>

                                <!-- Credentials Section -->
                                <TextBlock Text="Saved Credentials" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{DynamicResource TitleBrush}" Margin="0,0,0,12"/>
                                <Border Background="{DynamicResource WindowBackgroundBrush}"
                                        BorderBrush="{DynamicResource PanelBorderBrush}"
                                        BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                                    <Grid>
                                        <StackPanel x:Name="NoCredentialsPanel">
                                            <TextBlock Text="No credentials saved for this device."
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <Button Content="Add Credentials" Margin="0,8,0,0"
                                                    Style="{StaticResource ToolbarButtonStyle}"
                                                    HorizontalAlignment="Left"
                                                    Click="AddCredentials_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Notes Section -->
                                <TextBlock Text="Notes" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{DynamicResource TitleBrush}" Margin="0,0,0,12"/>
                                <TextBox x:Name="DeviceNotesText" AcceptsReturn="True" TextWrapping="Wrap"
                                         MinHeight="80" Padding="8"
                                         Background="{DynamicResource WindowBackgroundBrush}"
                                         BorderBrush="{DynamicResource PanelBorderBrush}"
                                         Foreground="{DynamicResource TextBrush}"
                                         Text="[Device notes will appear here]"
                                         TextChanged="DeviceNotesText_TextChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource StatusBarBackgroundBrush}" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Text="Ready" Grid.Column="0"
                           Foreground="{DynamicResource StatusBarTextBrush}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock x:Name="OnlineCountText" Text="3 online"
                               Foreground="{DynamicResource StatusBarTextBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " Foreground="{DynamicResource StatusBarTextBrush}" Opacity="0.5"/>
