<UserControl x:Class="IPScan.GUI.Controls.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="350">

    <UserControl.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    </UserControl.Resources>

    <StackPanel>
        <!-- Color Preview -->
        <Border Height="40" CornerRadius="4" Margin="0,0,0,15"
                BorderThickness="1" BorderBrush="#CCCCCC">
            <Border.Background>
                <SolidColorBrush x:Name="PreviewBrush" Color="#00FF00"/>
            </Border.Background>
        </Border>

        <!-- RGB Sliders -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Red -->
            <Label Grid.Row="0" Grid.Column="0" Content="R:" VerticalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}"/>
            <Slider Grid.Row="0" Grid.Column="1" x:Name="RedSlider"
                    Minimum="0" Maximum="255" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" Margin="5,0"
                    ValueChanged="Slider_ValueChanged"/>
            <TextBox Grid.Row="0" Grid.Column="2" x:Name="RedTextBox"
                     Text="0" VerticalAlignment="Center"
                     TextAlignment="Center" Margin="5,0,0,0"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     TextChanged="RgbTextBox_TextChanged"/>

            <!-- Green -->
            <Label Grid.Row="1" Grid.Column="0" Content="G:" VerticalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}"/>
            <Slider Grid.Row="1" Grid.Column="1" x:Name="GreenSlider"
                    Minimum="0" Maximum="255" Value="255"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" Margin="5,0"
                    ValueChanged="Slider_ValueChanged"/>
            <TextBox Grid.Row="1" Grid.Column="2" x:Name="GreenTextBox"
                     Text="255" VerticalAlignment="Center"
                     TextAlignment="Center" Margin="5,0,0,0"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     TextChanged="RgbTextBox_TextChanged"/>

            <!-- Blue -->
            <Label Grid.Row="2" Grid.Column="0" Content="B:" VerticalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}"/>
            <Slider Grid.Row="2" Grid.Column="1" x:Name="BlueSlider"
                    Minimum="0" Maximum="255" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" Margin="5,0"
                    ValueChanged="Slider_ValueChanged"/>
            <TextBox Grid.Row="2" Grid.Column="2" x:Name="BlueTextBox"
                     Text="0" VerticalAlignment="Center"
                     TextAlignment="Center" Margin="5,0,0,0"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     TextChanged="RgbTextBox_TextChanged"/>

            <!-- Hex Color Input -->
            <Label Grid.Row="4" Grid.Column="0" Content="Hex:" VerticalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}"/>
            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                     x:Name="HexTextBox" Text="#00FF00"
                     VerticalAlignment="Center" Margin="5,0,0,0"
                     TextChanged="HexTextBox_TextChanged"/>
        </Grid>

        <!-- Validation Message -->
        <TextBlock x:Name="ValidationText" Margin="0,5,0,0"
                   Foreground="Red" FontSize="11"
                   TextWrapping="Wrap" Visibility="Collapsed"/>
    </StackPanel>
</UserControl>
